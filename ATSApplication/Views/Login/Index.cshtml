<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ATS | Log in</title>
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    @*<link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">*@
    <link href="~/Content/AdminLTE-3.1.0-rc/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <!-- icheck bootstrap -->
    @*<link rel="stylesheet" href="../../plugins/icheck-bootstrap/icheck-bootstrap.min.css">*@
    <link href="~/Content/AdminLTE-3.1.0-rc/plugins/icheck-bootstrap/icheck-bootstrap.min.css" rel="stylesheet" />
    <!-- Theme style -->
    @*<link rel="stylesheet" href="../../dist/css/adminlte.min.css">*@
    <link href="~/Content/AdminLTE-3.1.0-rc/dist/css/adminlte.min.css" rel="stylesheet" />

    <!-- Toastr -->
    <link rel="stylesheet" href="~/Content/AdminLTE-3.1.0-rc/plugins/toastr/toastr.min.css">
</head>
<body class="hold-transition login-page">
@using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-material" }))
{
        <div class="login-box">
            <div class="login-logo">
                <img class="img-responsive onlybig" style="width:40%;" src="https://saidtechnologies.com/wp-content/uploads/2021/03/Said-Technologies-logo-design-final.png" alt="logo">
            </div>
            <!-- /.login-logo -->
            <div class="card" style="align-content:center">
                <div class="card-body login-card-body">
                    <p class="login-box-msg"><b>Sign In</b></p>
                    <form action="../../index3.html" method="post">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Username" name="user" >
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <input type="password" class="form-control" placeholder="Password" name="Password" >
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-8">
                                @*<div class="icheck-primary">
                                    <input type="checkbox" id="remember">
                                    <label for="remember">
                                        Remember Me
                                    </label>
                                </div>*@
                            </div>
                            <!-- /.col -->
                            <div class="col-4">
                                <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    </form>
                    <!-- /.social-auth-links -->
                    @*<p class="mb-1">
                        <a href="forgot-password.html">I forgot my password</a>
                    </p>
                    <p class="mb-0">
                        <a href="register.html" class="text-center">Register a new membership</a>
                    </p>*@
                </div>
                <!-- /.login-card-body -->
            </div>
        </div>

} <!-- /.login-box -->
    <!-- jQuery -->
    @*<script src="../../plugins/jquery/jquery.min.js"></script>*@
    <script src="~/Content/AdminLTE-3.1.0-rc/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    @*<script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>*@
    <script src="~/Content/AdminLTE-3.1.0-rc/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    @*<script src="../../dist/js/adminlte.min.js"></script>*@
    <script src="~/Content/AdminLTE-3.1.0-rc/dist/js/adminlte.min.js"></script>
    <!-- Toastr -->
    <script src="~/Content/AdminLTE-3.1.0-rc/plugins/toastr/toastr.min.js"></script>
      <script>
        $(document).ready(function () {
            var xx = @Html.Raw(Json.Encode(ViewBag.msg));
            console.log(xx);
            if (xx != "") {
                //swalmsg("Login Failed", "User Name or Password is incorrect", "warning", true);
               //alert("Login Failed", "User Name or Password is incorrect", "warning");
                toastr.error('User Name or Password is incorrect.')
            }
        })
    </script>
</body>
</html>

